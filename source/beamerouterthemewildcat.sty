\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{texsx}[1][]
{
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
  \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, white,font=\Large] at (0.05*\the\paperwidth,0.61){\raggedright\insertframetitle};}
  \else%
      {\node[anchor= west, white,font=\large] at (0.05*\the\paperwidth,0.81){\raggedright\insertframetitle};%
       \node[anchor= west, white,font=\small] at (0.05*\the\paperwidth,0.41){\raggedright\insertframesubtitle};}%
  \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

% Footer (Pages)
\setbeamertemplate{footline}{
  \ifnum\thepage>1
    \hfill%
    \usebeamercolor[fg]{page number in head/foot}%
    \usebeamerfont{page number in head/foot}%
    \color{black!20} % Change the color to black!40
    \the\numexpr\insertframenumber-1\relax/\the\numexpr\inserttotalframenumber-1\relax\kern1em\vskip2pt%
  \fi
}

